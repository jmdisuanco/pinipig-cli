const pinipig = require('pinipig')
const {crud} = pinipig
const {cors} = pinipig.utils
const ${Model} = require('../models/${model}')
const {
  create,
  read,
  update,
  readList,
  destroy,
  count
} = crud

let c = create(${Model})
let r = read(${Model})
let u = update(${Model})
let d = destroy(${Model})
let rl = readList(${Model})
let total = count(${Model})

let routes = [{
    url: '/${model}/:id',
    GET: [cors,r],
    PUT: [cors, u],
    DEL: [cors, d],
    OPTIONS: cors
  },
  {
    url: '/${model}',
    POST: [cors, c],
    GET: [cors, rl],
    OPTIONS: cors
  },
  {
    url: '/${model}/count',
    GET: [cors, total],
    OPTIONS: cors
  }
]


module.exports = routes